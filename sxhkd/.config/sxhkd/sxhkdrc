
super + q
    dmenu_run
super + w
    $BROWSER
super + e
    $TERMINAL
super + a
    $TERMINAL -e fff
super + Return
    emacsclient -c
super + b
    blueman-manager
super + o
    xdg-open "$(dbrowse)"
super + p
    opass -p -y
super + c
    $TERMINAL -e nvim -c 'Codi python'
ctrl + super + space
    slock

{XF86MonBrightnessDown,XF86MonBrightnessUp}
    xbacklight {-dec,-inc} 5; pkill -USR1 cstatus
{XF86AudioLowerVolume,XF86AudioRaiseVolume}
    pulsemixer --unmute --change-volume {-,+}5; pkill -USR1 cstatus
XF86AudioMute
    pulsemixer --toggle-mute; pkill -USR1 cstatus

{XF86AudioPrev,XF86AudioNext,XF86AudioPlay}
    mpc {prev,next,toggle}

super + shift + Delete
    prompt "Shutdown?" "shutdown now"
