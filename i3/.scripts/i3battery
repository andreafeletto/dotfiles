#!/bin/bash

VALUE=`cat /sys/class/power_supply/BAT1/capacity` || exit
STATUS=`cat /sys/class/power_supply/BAT1/status`

if [ "$VALUE" -ge 30 ]; then
	color="#FFFFFF"
else
	color="#FF0000"
fi

[ "$STATUS" = "Charging" ] && color="#00FF00"

echo "<span color='$color'>`sed -e "s/,//g;s/Discharging/ğŸ”‹/;s/Charging/ğŸ”Œ/;s/Unknown/â“/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g" <<<"$STATUS"` `sed -e 's/$/%/' <<<"$VALUE"`</span>"
