#!/bin/sh

battery() {
    value=$(cat /sys/class/power_supply/BAT1/capacity) || exit
    status=$(cat /sys/class/power_supply/BAT1/status)
    case $status in
        "Discharging")
            icon="ðŸ”‹";;
        "Charging")
            icon="ðŸ”Œ";;
        "Full")
            icon="âš¡";;
        "Unknown")
            icon="â“";;
    esac
    printf "$icon %5b\n" "$value%"
}

volume() {
    if [ "$(pulsemixer --get-mute)" = "1" ]; then
        printf "   ðŸ”‡   \n"
    else
        printf "ðŸ”Š %5b\n" "$(pulsemixer --get-volume | awk '{print $1}')%"
    fi
}

backlight() {
    printf "ðŸ’¡ %5b\n" "$(xbacklight | cut -d. -f1)%"
}

refresh() {
    DATE=$(date '+%a %d %b %Y  %I:%M%p')
    xsetroot -name "| $(backlight) | $(volume) | $(battery) | $DATE"
}

[ "$1" = '-r' ] && pkill -USR1 status &>/dev/null && exit

trap 'refresh' USR1

while true; do
    refresh
    sleep 10 & wait $!
done
